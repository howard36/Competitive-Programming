{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "isBackground": true,
    "tasks": [
        {
            "label": "Build And Run C++",
            "command": "cd",
            "args": [
                "${fileDirname}",
                ";",
                "g++",
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                ";",
                "./${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build C++",
            "command": "cd",
            "args": [
                "${fileDirname}",
                ";",
                "g++",
                "-g",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe",
            ]
        }
    ]
}